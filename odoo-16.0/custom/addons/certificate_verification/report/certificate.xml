<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_certificate" model="ir.actions.report">
        <field name="name">Certificate</field>
        <field name="model">certificate.certificate</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">certificate_verification.report_certificate_document</field>
        <field name="report_file">certificate_verification.report_certificate_document</field>
        <field name="print_report_name">"Certificate"</field>
        <field name="binding_model_id" ref="model_certificate_certificate"/>
        <field name="binding_type">report</field>
    </record>


    <template id="report_certificate_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <t t-if="doc.fee_status == 'invoiced'">
                        <div class="page">
                            <div class="text-center">
                                <h2>Course Certificate</h2>
                            </div>
                            <div class="mt-3">
                                <div>
                                    Starting Date:
                                    <t t-esc="doc.course_start_datetime.date()"/>
                                </div>
                                <div class="mt-2">
                                    Ending Date:
                                    <t t-esc="doc.course_end_datetime.date()"/>
                                </div>
                            </div>
                            <div class="mt-5">
                                "This certificate is awarded to
                                <b>
                                    <span t-esc="doc.partner_id.name"/>
                                </b>
                                in recognition of their successful completion of
                                <b>
                                    <span t-esc="doc.course_id.name"/>
                                </b>
                                Your hard work, dedication, and commitment to learning have enabled you to achieve this
                                milestone, and we are proud to recognize your accomplishment.‚Äù
                            </div>
                            <div class="mt-3 text-left">
                                Your Sincerely,
                            </div>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="text-center">
                            <h2>
                                <span t-esc="doc.partner_id.name"/>
                                Course Payment is Pending...
                            </h2>
                        </div>
                    </t>

                </t>
            </t>
        </t>
    </template>


</odoo>